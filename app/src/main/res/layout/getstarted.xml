<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="32dp">

        <!-- Top Bar -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SafeMe"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

        </LinearLayout>

        <!-- Main Title -->
        <TextView
            android:id="@+id/tvMainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safety at every step"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your personal safety companion for\nemergencies, travel, and peace of mind.\nAlways there when you need it most."
            android:textColor="#AAAAAA"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvMainTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Get Started Button -->
        <Button
            android:id="@+id/btnGetStarted"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Get Started"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:layout_marginTop="32dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Features Container -->
        <LinearLayout
            android:id="@+id/featuresContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/btnGetStarted"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Feature 1: Instant Alerts -->
            <LinearLayout
                android:id="@+id/feature1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"

                android:layout_marginBottom="22dp">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/iconAlert"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/error"
                    android:contentDescription="Alert Icon"
                    app:tint="#FF5252" />

                <!-- Text Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvFeature1Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instant Alerts"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvFeature1Desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send emergency alerts to your contacts with shake detection and silent mode options."
                        android:textColor="#AAAAAA"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Feature 2: Live Location -->
            <LinearLayout
                android:id="@+id/feature2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginBottom="24dp">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/iconLocation"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/group"
                    android:contentDescription="Location Icon"
                    app:tint="#FF9800" />

                <!-- Text Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvFeature2Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Live Location"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvFeature2Desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share your real-time location with trusted contacts during emergencies or travel."
                        android:textColor="#AAAAAA"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Feature 3: Emergency Contacts -->
            <LinearLayout
                android:id="@+id/feature3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/iconContacts"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/people"
                    android:contentDescription="Contacts Icon"
                    app:tint="#FFFFFF" />

                <!-- Text Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvFeature3Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency Contacts"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvFeature3Desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage trusted contacts who receive your alerts and can help in emergencies."
                        android:textColor="#AAAAAA"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>